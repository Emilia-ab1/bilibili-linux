{
  "name": "bilibili",
  "version": "1.1.3",
  "description": "bilibili client",
  "main": "index.js",
  "build": {
    "buildVersion": "1",
    "directories": {
      "output": "tmp/build",
      "app": "app/app"
    },
    "extraResources": [
      "extensions",
      "app/app-update.yml"
    ],
    "electronVersion": "17.4.0",
    "appId": "com.bilibili.app",
    "mac": {
      "target": [
        "dmg",
        "zip"
      ]
    },
    "win": {
      "target": [
        "nsis",
        "zip"
      ]
    },
    "linux": {
      "target": [
        "AppImage"
      ],
      "maintainer": "msojocs <jiyecafe@gmail.com> (https://www.jysafe.cn)",
      "icon": "res/icons",
      "synopsis": "BiliBili client for Linux.",
      "description": "BiliBili client for Linux with roaming.",
      "category": "AudioVideo"
    }
  },
  "scripts": {
    "pkg-win": "electron-builder --win --x64",
    "pkg-mac": "electron-builder --mac --x64",
    "pkg-linux": "electron-builder --linux --x64",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/msojocs/bilibili-linux.git"
  },
  "keywords": [
    "bilibili"
  ],
  "author": "msojocs",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/msojocs/bilibili-linux/issues"
  },
  "homepage": "https://github.com/msojocs/bilibili-linux#readme",
  "devDependencies": {
    "electron-builder": "^23.0.3"
  }
}
